    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                        

        String dateAnswer = jTextField1.getText(); //get date  
        String taskAnswer = jTextField2.getText(); //get tasks
       
       
        String dateRegex = "^([0-2][0-9]|(3)[0-1])(\\/)(((0)[0-9])|((1)[0-2]))(\\/)\\d{4}$";
        boolean dateMatch = dateAnswer.matches(dateRegex);
       
        if (dateMatch == false) {
            JOptionPane.showMessageDialog(null, "Invalid date entered! If you used single digits make sure to put a '0' infront!");
        }else if (dateMatch == true) {
            JOptionPane.showMessageDialog(null, "SAVED SUCCESSFULLY");
           
        } else {
            System.out.println("");
        }
       
     
       
        if(!userTasks.containsKey(dateAnswer)) {
            userTasks.put(dateAnswer, new ArrayList<>());
        }
            userTasks.get(dateAnswer).add(taskAnswer);
           
           
         //if (userTasks.dateAnswer.hasTask()
           
           
           
 
    }                                        

