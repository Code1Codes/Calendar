    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                        
       
       
        String dateAnswer1 = jTextField1.getText(); //get date  
        String taskAnswer1 = jTextField2.getText(); //get tasks
       
        JFrame frame = new JFrame();
        frame.setBackground(Color.decode("#ff7f50") ); // set background color
        frame.setPreferredSize(new Dimension(200,300));
        frame.pack();
       
        JTextArea taskList = new JTextArea();
        taskList.setBackground(Color.decode("#ff7f50") );
     
        StringBuilder builder = new StringBuilder();
       
        for (String s: userTasks.get(dateAnswer1)) {
           builder.append("- " + s + "\r\n");
       }
       
        taskList.setText("You have the following tasks:\r\n\r\n" + builder + "     ");
        frame.add(taskList);
        frame.setVisible(true);
        taskList.setVisible(true);


    }                                        

