    private void nextActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        if (month == 12){
            month = 1;
            year++;
        }
        else{
            month++;
        }
        slide.show(new PanelDate(month, year), NewJPanel.AnimateType.TO_LEFT);
        showMonthYear();
    }                                    

    private void backActionPerformed(java.awt.event.ActionEvent evt) {                                     
        if (month == 1) {
            month = 12;
            year--;
        } else {
            month--;
        }
        slide.show(new PanelDate(month, year), NewJPanel.AnimateType.TO_RIGHT);
        showMonthYear();
        
    }                                    
   private void thisMonth(){
       java.util.Calendar calendar = java.util.Calendar.getInstance();
       calendar.setTime(new Date());
       month = calendar.get(java.util.Calendar.MONTH) + 1;
       calendar.get(java.util.Calendar.YEAR); 
   }
   private void showMonthYear(){
       java.util.Calendar calendar = java.util.Calendar.getInstance();
       calendar.set(java.util.Calendar.MONTH, month - 1);
       calendar.set(java.util.Calendar.YEAR, year);
       calendar.set(java.util.Calendar.DATE, 1);
       SimpleDateFormat df = new SimpleDateFormat("MMMM-yyyy");
       monthYear.setText(df.format(calendar.getTime()));
   }

    // Variables declaration - do not modify                     
    private javax.swing.JButton back;
